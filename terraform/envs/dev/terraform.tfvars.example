# ============================================
# Example terraform.tfvars
# ============================================

# -----------------------------
# General
# -----------------------------
aws_region  = "eu-central-1"
name        = "eks-platform"
environment = "dev"

# -----------------------------
# Networking
# -----------------------------
vpc_cidr = "10.0.0.0/16"

azs = [
  "eu-central-1a",
  "eu-central-1b",
  "eu-central-1c",
]

public_subnets = [
  "10.0.11.0/24",
  "10.0.12.0/24",
  "10.0.13.0/24",
]

private_subnets = [
  "10.0.0.0/23",
  "10.0.2.0/23",
  "10.0.4.0/23",
]

# -----------------------------
# EKS
# -----------------------------
cluster_version = "1.34"

node_instance_types = [
  "t3.medium",  # primary
  "t3a.medium", # fallback
]

node_desired_size = 3
node_min_size     = 3
node_max_size     = 3
node_disk_size    = 30

# -----------------------------
# EKS API access
# -----------------------------
# Example public IP (RFC 5737 â€“ documentation only)
eks_public_access_cidrs = [
  "203.0.113.10/32"
]

# -----------------------------
# ACM (example domain)
# -----------------------------
acm_domain_name = "example.com"

acm_subject_alternative_names = [
  "*.example.com"
]

# -----------------------------
# Cloudflare
# -----------------------------
# Cloudflare DNS zone ID for example.com
cloudflare_zone_id = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Cloudflare API token must be provided via environment variable:
# export TF_VAR_cloudflare_api_token=...
