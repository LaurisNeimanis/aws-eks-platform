# ============================================
# Example terraform.tfvars
# ============================================

aws_region = "eu-central-1"

name     = "aws-eks-platform-dev"
vpc_cidr = "10.0.0.0/16"

# -----------------------------
# Networking
# -----------------------------
public_subnets = [
  "10.0.1.0/24",
  "10.0.2.0/24",
]

private_subnets = [
  "10.0.11.0/24",
  "10.0.12.0/24",
]

azs = [
  "eu-central-1a",
  "eu-central-1b",
]

# -----------------------------
# EKS
# -----------------------------
cluster_version    = "1.34"
node_instance_type = "t3.small"
node_desired_size  = 1
node_min_size      = 1
node_max_size      = 1
node_disk_size     = 20

# IAM principal promoted to EKS cluster-admin.
#
# Demo usage:
#   aws iam get-user --user-name <user> --query 'User.Arn' --output text
#
# Production usage:
#   Prefer a dedicated IAM Role for platform administration:
#   aws iam get-role --role-name <eks-admin-role> --query 'Role.Arn' --output text
# admin_principal_arn = "arn:aws:iam::<ACCOUNT_ID>:user/<USER_NAME>"

# For reproducibility and CI compatibility
admin_principal_arn = "arn:aws:iam::000000000000:role/dummy"

# -----------------------------
# Tags
# -----------------------------
tags = {
  Project     = "aws-eks-platform"
  Environment = "dev"
  Terraform   = "true"
}
